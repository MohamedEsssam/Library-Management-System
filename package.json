{
  "name": "library-management-system",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start": "nodemon --exec ts-node src/main.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli",
    "run-migrations": "npm run typeorm migration:run -- -d src/configs/ormconfig.ts",
    "generate-migration": "npm run typeorm -- -d src/configs/ormconfig.ts migration:generate src/db/migrations/$npm_config_name",
    "create-migration": "npm run typeorm -- migration:create ./migrations/$npm_config_name",
    "revert-migration": "npm run typeorm -- -d src/configs/ormconfig.ts migration:revert"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "class-validator": "^0.14.0",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.4",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "nodemon": "^3.0.1",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.10.4",
    "typedi": "^0.10.0",
    "typeorm": "^0.3.17",
    "typeorm-typedi-extensions": "^0.4.1",
    "ulid": "^2.3.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
